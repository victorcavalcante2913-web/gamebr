<script>
// ===== MENU =====
function openGame(id){
["menu","velha","snake","ppt"].forEach(e=>document.getElementById(e).classList.add("hidden"));
document.getElementById(id).classList.remove("hidden");
}
function back(){location.reload()}

// ===== RANKING BASE =====
let vx=+localStorage.vx||0, vo=+localStorage.vo||0;
document.getElementById("vx").innerText=vx;
document.getElementById("vo").innerText=vo;

let snakeRecord=+localStorage.snakeRecord||0;
document.getElementById("snakeRank").innerText=snakeRecord;

let pptWins=+localStorage.pptWins||0;
document.getElementById("pptRank").innerText=pptWins;

// ===== JOGO DA VELHA =====
let velhaBoard=["","","","","","","","",""];
let velhaPlayer="X";
let velhaMode="2p";
const velhaDiv=document.getElementById("velhaBoard");
const velhaStatus=document.getElementById("velhaStatus");

function drawVelha(){
velhaDiv.innerHTML="";
velhaBoard.forEach((v,i)=>{
let c=document.createElement("div");
c.className="cell";
c.innerText=v;
c.onclick=()=>velhaPlay(i);
velhaDiv.appendChild(c);
});
}
function velhaPlay(i){
if(velhaBoard[i])return;
velhaBoard[i]=velhaPlayer;
if(checkVelha(velhaPlayer)){winVelha(velhaPlayer);return;}
velhaPlayer=velhaPlayer=="X"?"O":"X";
velhaStatus.innerText="Vez do "+velhaPlayer;
drawVelha();
if(velhaMode=="bot" && velhaPlayer=="O") setTimeout(botVelha,400);
}
function botVelha(){
let i=velhaBoard.findIndex(v=>v=="");
if(i>-1) velhaPlay(i);
}
function checkVelha(p){
const w=[[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]];
return w.some(c=>c.every(i=>velhaBoard[i]==p));
}
function winVelha(p){
velhaStatus.innerText=p+" ganhou!";
if(p=="X"){vx++;localStorage.vx=vx;document.getElementById("vx").innerText=vx;}
else{vo++;localStorage.vo=vo;document.getElementById("vo").innerText=vo;}
velhaDiv.style.pointerEvents="none";
}
function resetVelha(){
velhaBoard=["","","","","","","","",""];
velhaPlayer="X";
velhaStatus.innerText="Vez do X";
velhaDiv.style.pointerEvents="auto";
drawVelha();
}
drawVelha();

// ===== SNAKE =====
const ctx=document.getElementById("snakeCanvas").getContext("2d");
let snake,food,dir,autoSnake=false,score=0,interval;

function startSnake(bot){
clearInterval(interval);
autoSnake=bot;
snake=[[10,10]];
food=[5,5];
dir=[1,0];
score=0;
interval=setInterval(snakeGame,200);
}
document.addEventListener("keydown",e=>{
if(e.key=="ArrowUp")dir=[0,-1];
if(e.key=="ArrowDown")dir=[0,1];
if(e.key=="ArrowLeft")dir=[-1,0];
if(e.key=="ArrowRight")dir=[1,0];
});
function snakeGame(){
ctx.clearRect(0,0,300,300);
if(autoSnake) dir=[Math.sign(food[0]-snake[0][0]),Math.sign(food[1]-snake[0][1])];
let h=[snake[0][0]+dir[0],snake[0][1]+dir[1]];
if(h[0]<0||h[1]<0||h[0]>14||h[1]>14){endSnake();return;}
snake.unshift(h);
if(h[0]==food[0]&&h[1]==food[1]){
score++;
food=[Math.floor(Math.random()*15),Math.floor(Math.random()*15)];
}else snake.pop();
snake.forEach(s=>ctx.fillRect(s[0]*20,s[1]*20,18,18));
ctx.fillRect(food[0]*20,food[1]*20,18,18);
}
function endSnake(){
clearInterval(interval);
if(score>snakeRecord){
snakeRecord=score;
localStorage.snakeRecord=snakeRecord;
document.getElementById("snakeRank").innerText=snakeRecord;
}
}

// ===== PEDRA PAPEL TESOURA =====
let pptMode="bot";
function pptPlay(p){
let bot=["pedra","papel","tesoura"][Math.floor(Math.random()*3)];
let res="";
if(p==bot) res="Empate!";
else if(
(p=="pedra"&&bot=="tesoura")||
(p=="papel"&&bot=="pedra")||
(p=="tesoura"&&bot=="papel")
){
res="VocÃª ganhou! ğŸ‰";
pptWins++; localStorage.pptWins=pptWins;
document.getElementById("pptRank").innerText=pptWins;
}else res="VocÃª perdeu ğŸ˜¢";
document.getElementById("pptStatus").innerText="VocÃª: "+p+" | Bot: "+bot+" â†’ "+res;
}
</script>

