<script>
// ===== RANKING =====
let advRecord = +localStorage.advRecord || 0;
document.getElementById("advRank").innerText = advRecord;

// ===== VARIÃVEIS =====
const actx = document.getElementById("advCanvas").getContext("2d");
let players = [];
let charColor = "red";
let level = 1;
let advScore = 0;
let advLoop;

// ===== SELEÃ‡ÃƒO =====
function selectChar(c){
charColor = c;
}

// ===== INICIAR =====
function startAdventure(qtd){
document.getElementById("charSelect").classList.add("hidden");
const canvas = document.getElementById("advCanvas");
canvas.classList.remove("hidden");

players = [];
for(let i=0;i<qtd;i++){
players.push({
x:20,
y:150 - i*30,
color: charColor,
vy:0
});
}
level = 1;
advScore = 0;
clearInterval(advLoop);
advLoop = setInterval(gameAdv, 30);
}

// ===== CONTROLES =====
document.addEventListener("keydown",e=>{
if(e.key=="ArrowUp") players[0].vy = -5;
if(e.key=="w" && players[1]) players[1].vy = -5;
});

// ===== GAME LOOP =====
function gameAdv(){
actx.clearRect(0,0,300,200);

// chÃ£o
actx.fillStyle="#444";
actx.fillRect(0,180,300,20);

// jogadores
players.forEach(p=>{
p.vy += 0.3;
p.y += p.vy;
if(p.y>160){p.y=160;p.vy=0}
actx.fillStyle=p.color;
actx.fillRect(p.x,p.y,15,15);
});

// obstÃ¡culo
actx.fillStyle="yellow";
actx.fillRect(300-level*20,160,10,20);

// colisÃ£o
players.forEach(p=>{
if(p.x+15 > 300-level*20 && p.y+15 > 160){
endAdventure();
}
});

// avanÃ§o
level += 0.02;
advScore++;

}

// ===== FIM =====
function endAdventure(){
clearInterval(advLoop);
if(advScore > advRecord){
advRecord = advScore;
localStorage.advRecord = advRecord;
document.getElementById("advRank").innerText = advRecord;
}
alert("Fim de jogo! Pontos: "+advScore);
location.reload();
}
  </script>
