<script>
// ===== CLIQUE =====
let c1=0,c2=0,clickBot=false,clickBest=+localStorage.clickBest||0;
document.getElementById("clickRank").innerText=clickBest;
function startClick(bot){
c1=0;c2=0;clickBot=bot;
updateClick();
if(bot) setInterval(()=>{c2++;updateClick()},600);
}
function clickP1(){c1++;saveClick()}
function clickP2(){if(!clickBot){c2++;saveClick()}}
function updateClick(){
c1Span.innerText=c1;c2Span.innerText=c2;
}
const c1Span=document.getElementById("c1");
const c2Span=document.getElementById("c2");
function saveClick(){
updateClick();
let m=Math.max(c1,c2);
if(m>clickBest){clickBest=m;localStorage.clickBest=clickBest;document.getElementById("clickRank").innerText=clickBest;}
}

// ===== ADIVINHE =====
let secret=Math.floor(Math.random()*10)+1;
let guessWins=+localStorage.guessWins||0;
document.getElementById("guessRank").innerText=guessWins;
function guessPlay(){
let v=+document.getElementById("guessInput").value;
if(v==secret){
document.getElementById("guessStatus").innerText="Acertou! ğŸ‰";
guessWins++;localStorage.guessWins=guessWins;
document.getElementById("guessRank").innerText=guessWins;
secret=Math.floor(Math.random()*10)+1;
}else document.getElementById("guessStatus").innerText="Errou ğŸ˜…";
}

// ===== PONG =====
const pctx=document.getElementById("pongCanvas").getContext("2d");
let px=140,py=90,bx=150,by=100,dx=2,dy=2,pongBot=false,pongPts=0,pi;
function startPong(bot){
pongBot=bot;pongPts=0;
clearInterval(pi);
pi=setInterval(pongGame,20);
}
document.addEventListener("keydown",e=>{
if(e.key=="w")py-=10;
if(e.key=="s")py+=10;
});
function pongGame(){
pctx.clearRect(0,0,300,200);
if(pongBot) px+=Math.sign(by-px)*3;
bx+=dx;by+=dy;
if(by<0||by>200)dy*=-1;
if(bx<10&&Math.abs(by-py)<30){dx*=-1;pongPts++}
if(bx>290)dx*=-1;
pctx.fillRect(5,py,5,60);
pctx.fillRect(290,px,5,60);
pctx.fillRect(bx,by,5,5);
document.getElementById("pongRank").innerText=pongPts;
}

// ===== LIG-4 (simples) =====
let lig4Mode="2p",lig4Wins=+localStorage.lig4Wins||0;
document.getElementById("lig4Rank").innerText=lig4Wins;
function resetLig4(){
document.getElementById("lig4Board").innerHTML="(Lig-4 simples em grade aqui)";
}

// ===== ALVO =====
let alvoPts=0,alvoBest=+localStorage.alvoBest||0;
document.getElementById("alvoRank").innerText=alvoBest;
function startAlvo(){
alvoPts=0;
spawnAlvo();
}
function spawnAlvo(){
let box=document.getElementById("alvoBox");
box.innerHTML="";
let a=document.createElement("div");
a.style.width="20px";a.style.height="20px";
a.style.background="red";
a.style.position="absolute";
a.style.left=Math.random()*180+"px";
a.style.top=Math.random()*180+"px";
a.onclick=()=>{
alvoPts++;document.getElementById("alvoPts").innerText=alvoPts;
if(alvoPts>alvoBest){alvoBest=alvoPts;localStorage.alvoBest=alvoBest;document.getElementById("alvoRank").innerText=alvoBest;}
spawnAlvo();
};
box.appendChild(a);
}

// ===== CORRIDA =====
let r1=0,r2=0,corridaWins=+localStorage.corridaWins||0;
document.getElementById("corridaRank").innerText=corridaWins;
document.addEventListener("keydown",e=>{
if(e.key=="a")r1++;
if(e.key=="l")r2++;
document.getElementById("r1").innerText=r1;
document.getElementById("r2").innerText=r2;
if(r1>=20||r2>=20){
corridaWins++;localStorage.corridaWins=corridaWins;
document.getElementById("corridaRank").innerText=corridaWins;
}
});
</script>
<!-- ===== PARTE 3 â€“ JOGO DE AVENTURA ===== -->

<div id="aventura" class="box hidden">
